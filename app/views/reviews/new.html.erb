<h1>Write your review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, as: :text, label: "Write your review" %>
  <%= f.input :rating, collection: 0..5, label: "Choose a rating from 0 to 5!" %>
  <%= f.button :submit, "Submit your review", class: "btn btn-primary" %>
<% end %>
